<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
     xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout 
	    android:layout_width="match_parent" 
		android:layout_height="?android:attr/actionBarSize"
        android:background="@android:color/white"
		android:orientation="horizontal" >
		<ImageView 
		    android:id="@+id/paster_download_title_back_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_gravity="center_vertical|left"
		    android:paddingLeft="13dp"
		    android:paddingRight="0dp"
		    android:scaleType="center"
            android:contentDescription="@null"
		    android:src="@drawable/btn_qupai_cancel_cross_pressed" />
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:textSize="20sp"
		    android:textColor="@android:color/black"
			android:id="@+id/download_title"/>
		<TextView
		    android:id="@+id/paster_download_manager_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="20dp"
		    android:layout_gravity="center_vertical|right"
		    android:textSize="20sp"
		    android:textColor="@android:color/black"
		    android:text="@string/resource_manager"
		    android:visibility="visible" />
		
	</FrameLayout>   
	
    <FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent" >

		<ListView
				android:id="@+id/channelSingleListView"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:descendantFocusability="blocksDescendants"
				android:divider="@null"
				android:fadingEdge="none"
				android:fastScrollEnabled="false"
				android:scrollbarStyle="outsideOverlay"
				android:scrollbars="none" />

	</FrameLayout>
    
</LinearLayout>
