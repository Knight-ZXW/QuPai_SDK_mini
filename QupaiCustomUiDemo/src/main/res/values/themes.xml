        <item name="qupaiBeautySkinHead">@drawable/theme_default_btn_qupai_toggle_beauty_skin</item>
        <item name="qupaiEffectListMoreItem">@drawable/theme_default_qupai_effect_list_more_item</item>
        <item name="qupaiOverlayListDownload">@drawable/theme_default_qupai_overlay_list_download_item</item>
        <item name="qupaiSelfTimerButton">@drawable/theme_default_btn_qupai_self_timer</item>
