    </style>

    <style name="Theme.RenderProgress" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Qupai.ActivityNoAnimation</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Qupai.Render</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

