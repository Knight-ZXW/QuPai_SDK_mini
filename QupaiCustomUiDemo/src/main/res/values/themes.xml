        <item name="android:windowActionBar">false</item>
        <item name="absHListViewStyle">@style/Widget.AbsHListView</item>
        <item name="hListViewStyle">@style/Widget.HListView</item>
    </style>

    <style name="Theme.Qupai.Video.Default" parent="Theme.Qupai.Video">
        <item name="android:progressBarStyleHorizontal">@style/Qupai.Widget.Default.ProgressBar.Horizontal</item>
        <item name="android:actionButtonStyle">@style/Widget.ActionButton.Qupai.Recorder</item>
        <item name="android:windowTitleStyle">@style/WindowTitle.Qupai.Recorder</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:tabWidgetStyle">@style/Widget.TabWidget.Qupai.Recorder</item>
        <item name="android:imageButtonStyle">@style/Widget.ImageButton.Qupai.Recorder</item>
        <item name="android:seekBarStyle">@style/Qupai.Widget.Default.SeekBar</item>
        <item name="qupaiRecordNextStepTickButton">@drawable/theme_default_btn_qupai_record_next_step_tick</item>
