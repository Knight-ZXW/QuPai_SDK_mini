<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval"> />
                    <solid android:color="@color/parser_download_btn_pressed" />
                </shape>
            </item>
            <item
                android:top="15dp"
                android:bottom="15dp"
                android:left="17dp"
                android:right="17dp">
                <bitmap android:src="@drawable/parser_preview_download"/>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="oval"> />
                    <solid android:color="@color/parser_download_btn_normal" />
                </shape>
            </item>
            <item
                android:top="15dp"
                android:bottom="15dp"
                android:left="17dp"
                android:right="17dp">
                <bitmap android:src="@drawable/parser_preview_download"/>
            </item>
        </layer-list>
    </item>
</selector>